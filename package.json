{
    "name": "masaylo",
    "version": "1.2.0",
    "description": "Entorno de desarrollo para programación en robótica",
    "author": "Antonio Gómez García y Lola Nogueras Atance, about a great job made by Fontaine Jean Philippe <antonio@aprendizdetecnologo.com>",
    "email": "antonio@aprendizdetecnologo.com",
    "license": "CC0-1.0",
    "main": "electronApp.js",
    "keywords": [
     "masaylo",
     "MASAYLO",
     "blockly",
     "BLOCKLY",
     "arduino",
     "ARDUINO",
     "esp32",
     "ESP32",
     "esp8266",
     "ESP8266",
     "electron",
     "ELECTRON",
     "serialport",
     "SERIALPORT",
     "electron-builder",
     "electron-updater",
     "PYTHON",
     "python",
     "microbit",
     "MICROBIT",
     "ACE",
     "ace"
    ],
    "scripts": {
     "postinstall": "electron-builder install-app-deps",
     "start": "electron .",
     "compilerlinux": "build --linux --x64",
     "compilerlinux32": "build --linux --ia32",
     "deb64": "electron-installer-debian --src dist/linux-unpacked --dest dist/installers/ --arch amd64 --config debconfig.json",
     "deb32": "electron-installer-debian --src dist/linux-unpacked32 --dest dist/installers/ --arch ia32 --config debconfig.json",
     "rebuild": "electron-rebuild -f -w serialport",
     "compiler": "build --win --x64",
     "compiler32": "build --win --ia32",
     "publier": "build --win --x64 -p always"
    },
    "build": {
     "appId": "com.electron.masaylo",
     "buildDependenciesFromSource": true,
     "asar": false,
     "directories": {
      "buildResources": "./build",
      "output": "./dist"
     },
     "files": [
      "./compilation/**/*",
      "./www/**/*",
      "./drivers/**/*",
      "*.js",
      "*.json",
      "*.md",
      "version",
      "LICENSE"
     ],
     "nsis": {
      "installerIcon": "build/installM.ico",
      "uninstallerIcon": "build/appM.ico",
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "include": "build/masaylo.nsh"
     },
     "win": {
      "target": [
       "nsis",
       "portable"
      ],
      "icon": "build/appM2.ico"
     },
     "linux": {
      "target": [
       "deb",
       "AppImage"
      ],
      "icon": "build/appM2.png"
     },
     "fileAssociations": [
      {
       "ext": "bloc",
       "name": "BLOC File",
       "role": "Editor",
       "icon": "build/appM2.ico"
      },
      {
       "ext": "bf",
       "name": "Factory File",
       "role": "Editor",
       "icon": "build/bf.ico"
      },
      {
       "ext": "www",
       "name": "Web File",
       "role": "Editor",
       "icon": "build/www.ico"
      },
      {
       "ext": "ino",
       "name": "Arduino File",
       "role": "Editor",
       "icon": "build/ino.ico"
      },
      {
       "ext": "py",
       "name": "Python File",
       "role": "Editor",
       "icon": "build/py.ico"
      },
      {
       "ext": "html",
       "name": "HTML File",
       "role": "Editor",
       "icon": "build/html.ico"
      }
     ],
     "extraFiles": [
        {
         "from": "./config.json",
         "to": "resources/"
        },
        {
         "from": "compilation",
         "to": "resources/compilation",
         "filter": [
          "**/*"
         ]
        },
        "README.md",
        "LICENSE.md",
        "config.json",
        "version",
        "LICENSE"
       ],
     "extraResources": [
      "dev-app-update.yml",
      "app-update.yml"
     ],
     "publish": [
      {
       "provider": "github",
       "repo": "masayloBlockly",
       "owner": "agomezgar",
       "releaseType": "release"
      }
     ]
    },
    "repository": {
     "type": "git",
     "url": "https://github.com/agomezgar/masayloBlockly"
    },
    "bugs": {
     "url": "https://github.com/agomezgar/masayloBlockly"
    },
    "devDependencies": {
        "electron": "^7.3.3",
        "electron-builder": "20.39.0",
        "electron-rebuild": "^2.3.5"
    },
    "dependencies": {
     "ajv": "^6.10.0",
     "child_process": "1.0.2",
     "decompress-zip": "^0.2.2",
     "extract-zip": "^2.0.1",
     "fs-extra": "^8.1.0",
     "ftp": "0.3.10",
     "node-gyp": "^7.1.2",
     "serialport": "^9.2.0",
     "tableify": "^1.1.0",
     "virtual-serialport": "^4.0.0"
    }
   }
   